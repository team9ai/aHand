{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "generate": {
      "outputs": ["src/generated/**"]
    },

    "@ahand/protocol#build": {
      "cache": false,
      "outputs": []
    },
    "@ahand/daemon#build": {
      "cache": false,
      "outputs": []
    },
    "@ahand/daemon#dev": {
      "cache": false,
      "persistent": true
    },
    "@ahand/ctl#build": {
      "cache": false,
      "outputs": []
    }
  }
}
